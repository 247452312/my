<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.uhyils.dao.ApiSubscribeDao">
    <resultMap type="indi.uhyils.pojo.DO.ApiSubscribeDO" id="ApiSubscribeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createDate" column="create_date" jdbcType="INTEGER"/>
        <result property="createUser" column="create_user" jdbcType="INTEGER"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="BOOLEAN"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="updateDate" column="update_date" jdbcType="INTEGER"/>
        <result property="updateUser" column="update_user" jdbcType="INTEGER"/>
        <result property="apiId" column="api_id" jdbcType="INTEGER"/>
        <result property="cron" column="cron" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="apiGroupId" column="api_group_id" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="columnList">
        a.id,
        a.create_date  as createDate,
        a.create_user  as createUser,
        a.delete_flag  as deleteFlag,
        a.remark,
        a.update_date  as updateDate,
        a.update_user  as updateUser,

        a.api_group_id as apiGroupId,
        a.cron,
        a.type,
        a.user_id      as userId
    </sql>
    <!--批量通过主键修改数据-->
    <update id="updateBatch" parameterType="indi.uhyils.pojo.DO.ApiSubscribeDO">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            update sys_api_subscribe set
            update_date = #{item.updateDate}
                ,update_user = #{item.updateUser}
            <if test="item.createDate != null">
                ,create_date = #{item.createDate}
            </if>
            <if test="item.createUser != null">
                ,create_user = #{item.createUser}
            </if>
            <if test="item.deleteFlag != null">
                ,delete_flag = #{item.deleteFlag}
            </if>
            <if test="item.remark != null and item.remark != ''">
                ,remark = #{item.remark}
            </if>
            <if test="item.updateDate != null">
                ,update_date = #{item.updateDate}
            </if>
            <if test="item.updateUser != null">
                ,update_user = #{item.updateUser}
            </if>
            <if test="item.apiId != null">
                ,api_id = #{item.apiId}
            </if>
            <if test="item.cron != null and item.cron != ''">
                ,cron = #{item.cron}
            </if>
            <if test="item.type != null">
                ,type = #{item.type}
            </if>
            <if test="item.userId != null">
                ,user_id = #{item.userId}
            </if>
            <if test="item.apiGroupId != null">
                ,api_group_id = #{item.apiGroupId}
            </if>
            where id = #{item.id}
        </foreach>
    </update>

    <select id="getByCron" resultType="indi.uhyils.pojo.DO.ApiSubscribeDO">
        select
        <include refid="columnList"/>
        from sys_api_subscribe a
        where delete_flag = 0
          and cron = #{cron}
    </select>

    <select id="checkSubscribeRepeat" resultType="java.lang.Integer"
            parameterType="indi.uhyils.pojo.DO.ApiSubscribeDO">
        select count(*)
        from sys_api_subscribe
        where delete_flag = 0
          and user_id = #{userId}
          and api_group_id = #{apiGroupId}
    </select>

    <select id="getByGroupAndUserId" resultType="indi.uhyils.pojo.DO.ApiSubscribeDO">
        select
        <include refid="columnList"/>
        from sys_api_subscribe a
        where a.delete_flag = 0
          and user_id = #{userId}
          and api_group_id = #{groupId}
    </select>

    <select id="getByGroupId" resultType="indi.uhyils.pojo.DO.ApiSubscribeDO">
        select
        <include refid="columnList"/>
        from sys_api_subscribe a
        where a.delete_flag = 0
          and api_group_id = #{id}
    </select>

    <select id="getAll" resultType="indi.uhyils.pojo.DO.ApiSubscribeDO">
        select
        <include refid="columnList"/>
        from sys_api_subscribe a
        where a.delete_flag = 0
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.uhyils.dao.PlatformPublishNodeDao">
    <resultMap type="indi.uhyils.pojo.DO.PlatformPublishNodeDO" id="PlatformPublishNodeMap">
        <result property="dbType" column="db_type" jdbcType="INTEGER"/>
        <result property="requestType" column="request_type" jdbcType="VARCHAR"/>
        <result property="interfaceName" column="interface_name" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="updateDate" column="update_date" jdbcType="BIGINT"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="sql" column="sql" jdbcType="VARCHAR"/>
        <result property="protocolType" column="protocol_type" jdbcType="INTEGER"/>
        <result property="updateUser" column="update_user" jdbcType="BIGINT"/>
        <result property="dbName" column="db_name" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="methodName" column="method_name" jdbcType="VARCHAR"/>
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="createUser" column="create_user" jdbcType="BIGINT"/>
        <result property="createDate" column="create_date" jdbcType="BIGINT"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="BIT"/>
        <result property="nodeId" column="node_id" jdbcType="BIGINT"/>
    </resultMap>

    <!--批量通过主键修改数据-->
    <update id="updateBatch" parameterType="indi.uhyils.pojo.DO.PlatformPublishNodeDO">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            update sys_platform_publish_node set
      update_date = #{item.updateDate}
                    ,update_user = #{item.updateUser}
            <if test="dbType != null">
                ,db_type = #{dbType}
            </if>
            <if test="requestType != null and requestType != ''">
                ,request_type = #{requestType}
            </if>
            <if test="interfaceName != null and interfaceName != ''">
                ,interface_name = #{interfaceName}
            </if>
            <if test="remark != null and remark != ''">
                ,remark = #{remark}
            </if>
            <if test="updateDate != null">
                ,update_date = #{updateDate}
            </if>
            <if test="url != null and url != ''">
                ,url = #{url}
            </if>
            <if test="sql != null and sql != ''">
                , sql = #{sql}
            </if>
            <if test="protocolType != null">
                ,protocol_type = #{protocolType}
            </if>
            <if test="updateUser != null">
                ,update_user = #{updateUser}
            </if>
            <if test="dbName != null and dbName != ''">
                ,db_name = #{dbName}
            </if>
            <if test="userId != null">
                ,user_id = #{userId}
            </if>
            <if test="methodName != null and methodName != ''">
                ,method_name = #{methodName}
            </if>
            <if test="createUser != null">
                ,create_user = #{createUser}
            </if>
            <if test="createDate != null">
                ,create_date = #{createDate}
            </if>
            <if test="deleteFlag != null">
                ,delete_flag = #{deleteFlag}
            </if>
            <if test="nodeId != null">
                ,node_id = #{nodeId}
            </if>
            where id = #{id}
        </foreach>
    </update>

    <select id="findRpcPublishNode" resultMap="PlatformPublishNodeMap">
        select id,
               create_date,
               create_user,
               delete_flag,
               remark,
               update_date,
               update_user,
               node_id,
               `sql`,
               protocol_type,
               user_id,
               interface_name,
               method_name,
               url,
               request_type,
               db_name,
               db_type
        from sys_platform_publish_node sppn
        <where>
            <trim prefixOverrides="and">
                <if test="interfaceName != null and interfaceName != ''">
                    and sppn.interface_name = #{interfaceName,jdbcType=VARCHAR}
                </if>
                <if test="methodName != null and methodName != ''">
                    and sppn.method_name = #{methodName,jdbcType=VARCHAR}
                </if>
            </trim>
        </where>
    </select>

    <select id="findHttpPublishNode" resultMap="PlatformPublishNodeMap">
        select id,
               create_date,
               create_user,
               delete_flag,
               remark,
               update_date,
               update_user,
               node_id,
               `sql`,
               protocol_type,
               user_id,
               interface_name,
               method_name,
               url,
               request_type,
               db_name,
               db_type
        from sys_platform_publish_node sppn
        <where>
            <trim prefixOverrides="and">
                <if test="url != null and url != ''">
                    and sppn.url = #{url,jdbcType=VARCHAR}
                </if>
                <if test="requestType != null and requestType != ''">
                    and sppn.request_type = #{requestType,jdbcType=VARCHAR}
                </if>
            </trim>
        </where>
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="indi.uhyils.dao.TraceLogDao">


    <sql id="columnList">
		a.now_time as nowTime,
		a.trace_id as traceId,
		a.update_user as updateUser,
		a.rpc_id as rpcId,
		a.log as log,
		a.log_level as logLevel,
		a.remark as remark,
		a.id as id,
		a.logger_name as loggerName,
		a.create_user as createUser,
		a.delete_flag as deleteFlag,
		a.update_date as updateDate
    </sql>

    <select id="getById" resultType="indi.uhyils.pojo.model.TraceLogEntity">
        select
        <include refid="columnList"/>
        from sys_trace_log a
        where delete_flag = 0
        and id = #{id}
    </select>

    <select id="getByArgsNoPage" resultType="indi.uhyils.pojo.model.TraceLogEntity">
        select
        <include refid="columnList"/>
        from sys_trace_log a
        where delete_flag = 0
        <foreach item="item" index="index" collection="list">
            and ${item.name} ${item.symbol} #{item.data}
        </foreach>
    </select>

    <select id="getByArgs" resultType="indi.uhyils.pojo.model.TraceLogEntity">
        select
        <include refid="columnList"/>
        from sys_trace_log a
        where delete_flag = 0

        <foreach item="item" index="index" collection="args">
            and ${item.name} ${item.symbol} #{item.data}
        </foreach>
        <if test="page != null and page != ''">
            limit ${(page-1) * size},${page * size}
        </if>

    </select>


    <insert id="insert" parameterType="indi.uhyils.pojo.model.TraceLogEntity">
        insert sys_trace_log(now_time,
		trace_id,
		update_user,
		rpc_id,
		log,
		log_level,
		remark,
		id,
		logger_name,
		create_user,
		delete_flag,
		update_date)
        values (#{nowTime},
		#{traceId},
		#{updateUser},
		#{rpcId},
		#{log},
		#{logLevel},
		#{remark},
		#{id},
		#{loggerName},
		#{createUser},
		#{deleteFlag},
		#{updateDate})
    </insert>

    <update id="update" parameterType="indi.uhyils.pojo.model.TraceLogEntity">
        update sys_trace_log set
        <if test="nowTime != null and nowTime != ''">
            ,now_time = #{nowTime}
        </if>
        <if test="traceId != null and traceId != ''">
            ,trace_id = #{traceId}
        </if>
        <if test="updateUser != null and updateUser != ''">
            ,update_user = #{updateUser}
        </if>
        <if test="rpcId != null and rpcId != ''">
            ,rpc_id = #{rpcId}
        </if>
        <if test="log != null and log != ''">
            ,log = #{log}
        </if>
        <if test="logLevel != null and logLevel != ''">
            ,log_level = #{logLevel}
        </if>
        <if test="remark != null and remark != ''">
            ,remark = #{remark}
        </if>
        <if test="loggerName != null and loggerName != ''">
            ,logger_name = #{loggerName}
        </if>
        <if test="createUser != null and createUser != ''">
            ,create_user = #{createUser}
        </if>
        <if test="deleteFlag != null and deleteFlag != ''">
            ,delete_flag = #{deleteFlag}
        </if>
        <if test="updateDate != null and updateDate != ''">
            ,update_date = #{updateDate}
        </if>
        where id = #{id}
    </update>

    <select id="count" resultType="java.lang.Integer">
        select count(*)
        from sys_trace_log a
        where delete_flag = 0;
    </select>

    <select id="countByArgs" resultType="java.lang.Integer">
        select count(*)
        from sys_trace_log a
        where delete_flag = 0
        <foreach item="arg" index="index" collection="args">
            and ${arg.name} ${arg.symbol} #{arg.data}
        </foreach>
    </select>

    <select id="checkRepeat" resultType="java.lang.Integer">
        select count(*)
        from sys_trace_log a
        where ${columnName} = #{value}
    </select>


</mapper>
